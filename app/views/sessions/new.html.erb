<% provide(:title, "Log in") %>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, layout: :basic, url: login_path) do |f| %>
            <%= f.email_field :email %>
            <%= f.password_field :password %>
            <%= f.submit "Log in" %>
        <% end %>
        <p>
            New user? <%= link_to "Sign up now!", signup_path %>
        </p>
    </div>
</div>
