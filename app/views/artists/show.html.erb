<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @artist.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @artist.last_name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @artist.title %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @artist.birthdate.strftime("%B %d, %Y") %>
</p>

<p>
  <strong>Birth location:</strong>
  <%= @artist.birth_location %>
</p>

<p>
  <strong>Hometown:</strong>
  <%= @artist.hometown %>
</p>

<p>
  <strong>Education:</strong>
  <%= @artist.education %>
</p>

<p>
  <strong>Full bio:</strong>
  <%= @artist.full_bio %>
</p>

<% if @artist.user == current_user %>
<%= link_to 'Edit', edit_artist_path(@artist) %> |
<% end %>
<% if @artist.user %>
    <%= link_to 'View User Page', user_path %>
<% end %>
<%= link_to 'Back', artists_path %>
