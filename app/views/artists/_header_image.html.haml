.container.container-fluid.header-image
  - if @artist.banner_image_id.present?
    = attachment_image_tag(@artist, :banner_image, :fill, 800, 200, class: 'img-fluid')
  - elsif @artist.profile_image_id.present?
    = attachment_image_tag(@artist, :profile_image, :fill, 800, 200, class: 'img-fluid')
