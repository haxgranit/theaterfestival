- if @artist.id.present?
  .artist-profile-details
    - provide(:title, @artist.stage_name)
    %h1
      = yield(:title)
    %figure.profile-image
      = attachment_image_tag(@artist, :profile_image, :fill, 400, 400)
      %figurecaption.social
        - if user_signed_in?
          - if current_user.likes?(@artist)
            = button_to artist_unlike_path(@artist), method: :post, class: 'unlike' do
              %i.fa.fa-thumbs-up
          - else
            = button_to artist_like_path(@artist), method: :post, class: 'like' do
              %i.fa.fa-thumbs-o-up
          - if current_user.follows?(@artist)
            = button_to artist_unfollow_path(@artist), method: :post, class: 'unfollow' do
              %i.fa.fa-minus
          - else
            = button_to artist_follow_path(@artist), method: :post, class: 'follow' do
              %i.fa.fa-plus

    - if @artist.title.present?
      %p
        %strong
          = @artist.title
    #user-stats
      %p.user-stat
        User Reviews #2,321
      %p.user-stat
        Followers:
        = @artist.followers(User).count
      %p.user-stat
        Likes:
        = @artist.likers(User).count
    #user-info
      %p

    - if @artist.full_bio.present?
      %h2
        Full Bio
      %p
        = @artist.full_bio
  .artist-profile-links

    %ul
      %li
        = link_to 'Edit', edit_artist_path(@artist)
      %li
        = link_to 'View User Page', user_path(@artist.user_id) if @artist.user.present?
      %li
        = link_to 'Claim Artist Page', artist_claim_path(@artist), method: :patch
