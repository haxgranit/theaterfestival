.row
  .col-sm-12
    = simple_form_for(resource,              |
      as: resource_name,                     |
      url: registration_path(resource_name), |
      wrapper: :horizontal_form) do |f|      |
      %h1 Sign up
      = devise_error_messages!
      = f.input :email, autofocus: true
      = f.input :first_name, as: :string
      = f.input :last_name, as: :string
      = f.input :password do
        = f.input_field :password, class: "form-control", autocomplate: :off
        #password-strength-text.text-xs-center
        %progress#password-strength.progress{"aria-describedby" => "password-strength-text", max: "100"}
      = f.input :password_confirmation, autocomplete: 'off'
      = f.input :time_zone, as: :time_zone, priority: /US/
      = f.input :location
      = f.button :submit, class: 'btn btn-primary btn-block'
    = render "devise/shared/links"
