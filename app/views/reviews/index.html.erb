<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Production</th>
      <th>Date</th>
      <th>Rating</th>
      <th>Title</th>
      <th>Summary</th>
      <th>Full text</th>
      <th>Agree</th>
      <th>Disagree</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.production %></td>
        <td><%= review.date %></td>
        <td><%= review.rating %></td>
        <td><%= review.title %></td>
        <td><%= review.summary %></td>
        <td><%= review.full_text %></td>
        <td><%= review.agree %></td>
        <td><%= review.disagree %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

