<% provide(:title, 'All Users') %>
<p id="notice"><%= notice %></p>

<h1><%= yield(:title) %></h1>

<table>
    <thead>
        <tr>
            <th>Email</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Time zone</th>
            <th>Location</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.email %></td>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.time_zone %></td>
                <td><%= user.location %></td>
                <td><%= link_to 'Show', user %></td>
            </tr>
        <% end %>
    </tbody>
</table>
