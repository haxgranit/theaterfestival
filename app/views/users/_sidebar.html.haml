.user-profile-details
  - provide(:title, @user.full_name)
  %h1= yield(:title)
  - if @user.profile_image_id.present?
    = attachment_image_tag(@user, :profile_image, :fill, 400, 400)
  - else
    = image_tag('unknown.png', size: '400x400')
  #user-stats
    %p.user-stat
      Following:
      = @user.followed.count
    %p.user-stat
      Liked:
      = @user.liked.count
  - if @user.location?
    #user-info
      %p
        Location:
        = @user.location


  - if policy(@user).edit?
    .user-profile-links
      %ul
        - if @user.artist.blank?
          %li
            = link_to 'Create Artist Page', new_artist_path
        - else
          %li

            <i class="fa fa-certificate"></i>
            = link_to 'View Artist Page', artist_path(@user.artist)
        - if @user.company.blank?
          %li
            = link_to 'Create Company Page', new_company_path
