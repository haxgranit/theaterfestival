= simple_form_for @company, defaults: {wrapper_html: {class: "col-sm-12"}} do |f|
  - if user_signed_in?
    .links
      = link_to_add_association 'Add Venue', f, target,        |
      class: 'btn btn-primary',                                 |
      partial: 'companies/venues/venue_fields'                  |
    .actions
      = f.button :submit, 'Save Venues'
