- if @company.present?
  .company-profile-details
    - provide(:title, @company.name)
    %h1
      = yield(:title)
    %figure.profile-image
      - if @company.company_image_id.present?
        = attachment_image_tag(@company, :company_image, :fill, 400, 400)
      - else
        = image_tag('unknown.png', size: '400x400')
      %figurecaption.social
        = render partial: 'shared/social_figure', locals: { target: @company }
    - if @company.name.present?
      %p
        %strong
          = @company.name
    - if @company.company_type.present?
      %p
        %em
          @company.company_type
    #user-stats
      %p.user-stat
        Followers:
        = @company.followers(User).count
      %p.user-stat
        Likes:
        = @company.likers(User).count
    - if @company.description.present?
      %h2
        Description
      %p
        = @company.description
    - if @company.email.present?
      %h2
        Contact
      %p
        = mail_to @company.email, 'Email'
      %p
        = link_to 'Website', @company.website
  - if policy(@company).edit?
    .company-profile-links
      %ul
        %li
          = link_to 'Edit', edit_company_path(@company)
        - if @company.user.present?
          %li
            = link_to 'View User Page', user_path(@company.user_id)
        - else
          %li
            = link_to 'Claim Company Page', company_claim_path(@company), method: :patch
