<p id="notice"><%= notice %></p>

<h1>Listing Company Metadata</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Date founded</th>
      <th>Location founded</th>
      <th>Founders</th>
      <th>Mission</th>
      <th>History</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_metadata.each do |company_metadatum| %>
      <tr>
        <td><%= company_metadatum.company %></td>
        <td><%= company_metadatum.address1 %></td>
        <td><%= company_metadatum.address2 %></td>
        <td><%= company_metadatum.date_founded %></td>
        <td><%= company_metadatum.location_founded %></td>
        <td><%= company_metadatum.founders %></td>
        <td><%= company_metadatum.mission %></td>
        <td><%= company_metadatum.history %></td>
        <td><%= link_to 'Show', company_metadatum %></td>
        <td><%= link_to 'Edit', edit_company_metadatum_path(company_metadatum) %></td>
        <td><%= link_to 'Destroy', company_metadatum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

