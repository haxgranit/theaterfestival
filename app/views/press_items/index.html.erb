<p id="notice"><%= notice %></p>

<h1>Listing Press Items</h1>

<table>
  <thead>
    <tr>
      <th>Production</th>
      <th>Date</th>
      <th>Publication</th>
      <th>Quote</th>
      <th>Author</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @press_items.each do |press_item| %>
      <tr>
        <td><%= press_item.production %></td>
        <td><%= press_item.date %></td>
        <td><%= press_item.publication %></td>
        <td><%= press_item.quote %></td>
        <td><%= press_item.author %></td>
        <td><%= press_item.link %></td>
        <td><%= link_to 'Show', press_item %></td>
        <td><%= link_to 'Edit', edit_press_item_path(press_item) %></td>
        <td><%= link_to 'Destroy', press_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

