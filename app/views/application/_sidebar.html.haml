%section.search
  %h1 Search by title
  = simple_form_for :search, url: search_productions_path, defaults: { required: false }, method: :get, remote: true do |f|
    = f.input :title, as: :string
    = f.button :submit, 'Search', class: 'btn-primary'

  %h1 Where would you like to see a show?
  = simple_form_for :show_search, wrapper: :horizontal_form, defaults: { required: false } do |f|
    = f.input :country, as: :string, placeholder: ''
    = f.input :state, as: :string, placeholder: ''
    = f.input :city, as: :string, placeholder: ''
    = f.button :submit, 'Search', class: 'btn-primary pull-right'
%section.price
  %h2 Price Range
  %input#price_range{"data-slider-max" => "1000", "data-slider-min" => "10", "data-slider-step" => "5", "data-slider-value" => "[20,800]", type: "text", value: ""}/
%section.filters
  %h2 Filter Search
  = simple_form_for :filters, wrapper: :horizontal_form, defaults: { required: false, as: :boolean } do |f|
    = f.input :price, label: 'Guaranteed Price Only'
    = f.input :price, label: 'Tonight'
    = f.input :price, label: 'Tomorrow'
    = f.input :price, label: 'This Weekend'
    = f.input :price, label: 'Next Week'
    = f.input :price, label: 'Matinees Only'
    = f.input :price, label: 'Late Night Only'
    = f.input :price, label: 'With Reviews'
    = f.input :price, label: 'User Favorites'
    = f.input :price, label: '1000+ Seats'
    = f.input :price, label: '-1000 Seats'
    = f.input :price, label: 'Black Box (Under 50 Seats)'
