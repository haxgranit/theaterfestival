<%= simple_form_for(@theater, wrapper: :horizontal_form) do |f| %>
    <%= f.input :name %>
    <% if policy(@theater).edit? %>
        <%= f.input :description %>
        <% if policy(@theater).admin? %>
            <%= f.input :venue_id, collection: Venue.all, value_method: :id, label_method: :name, prompt: true  %>
        <% end %>
        <%= f.simple_fields_for :theater_metadata, @theater.theater_metadata ||= TheaterMetadata.new do |f| %>
            <%= f.input :seat_capacity %>
            <%= f.input :hearing_devices %>
            <%= f.input :hearing_devices_info %>
            <%= f.input :translation_devices %>
            <%= f.input :translation_devices_info %>
            <%= f.input :wheelchair_accessible %>
            <%= f.input :wheelchair_accessible_info %>
            <%= f.input :guide_dogs %>
            <%= f.input :guide_dogs_info %>
        <% end %>
    <% end %>

    <%= f.button :submit, class: 'btn-primary' %>
<% end %>
