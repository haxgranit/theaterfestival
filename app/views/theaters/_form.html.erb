<%= simple_form_for(@theater, wrapper: :horizontal_form) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <% if policy(@theater).admin? %>
        <%= f.input :venue_id, collection: Venue.all, value_method: :id, label_method: :name, prompt: true  %>
    <% end %>
    <%= f.button :submit %>
<% end %>
