= simple_form_for @production, defaults: {wrapper_html: {class: "col-sm-4"}} do |f|
  - if user_signed_in?
    .links
      = link_to_add_association 'Add Showtime', f, :showtimes,        |
      class: 'btn btn-primary',                                 |
      partial: 'productions/showtimes/showtime_fields'                  |
    .actions
      = f.button :submit, 'Save Showtime'
