%p#notice= notice
%h1 Listing Festival Production Links
%table
  %thead
    %tr
      %th Festival
      %th Production
      %th{colspan: "3"}
  %tbody
    - @festival_production_links.each do |festival_production_link|
      %tr
        %td= festival_production_link.festival.title
        %td= festival_production_link.production.title
        %td= link_to 'Show', festival_production_link
        %td= link_to 'Edit', edit_festival_production_link_path(festival_production_link)
        %td= link_to 'Destroy', festival_production_link, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Festival production link', new_festival_production_link_path
